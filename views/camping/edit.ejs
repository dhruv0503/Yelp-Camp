<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Update Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= camps._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= camps.title 
                %>"required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" value="<%= camps.location%>"required>
            </div>
            <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="price" value="<%= camps.price %>"required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="description" required><%= camps.description %></textarea>
            </div>
            <div class="mb-3">
                <% camps.image.forEach((el, i) => { %>
                 <img src="<%= el.thumbnail %>" class="img-thumbnail" alt="">
                 <div class="form-check-inline">
                    <input type="checkbox" id="image<%=i %>" name="deleteImages[]" value="<%= el.filename %>">
                    <label for="image<%=i %>"> Delete? </label>
                 </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>
        <a class="btn btn-success" href="/campgrounds/<%= camps._id %>">Back</a>
    </div>
</div>
    